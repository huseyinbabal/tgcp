{
  "resources": {
    "secrets": {
      "display_name": "Secrets",
      "service": "secretmanager",
      "api": {
        "base": "https://secretmanager.googleapis.com/v1",
        "path": "projects/{project}/secrets",
        "method": "GET"
      },
      "response_path": "secrets",
      "id_field": "name",
      "name_field": "name",
      "columns": [
        { "header": "Name", "json_path": "name", "width": 45 },
        { "header": "Replication", "json_path": "replication.automatic", "width": 12 },
        { "header": "Created", "json_path": "createTime", "width": 22 },
        { "header": "Labels", "json_path": "labels", "width": 25 }
      ],
      "actions": [
        {
          "display_name": "Delete",
          "api": {
            "method": "DELETE",
            "path": "{name}"
          },
          "shortcut": "ctrl+d",
          "confirm": {
            "message": "Delete secret? All versions will be destroyed!",
            "destructive": true
          }
        }
      ],
      "sub_resources": [
        {
          "resource_key": "secret-versions",
          "display_name": "Versions",
          "shortcut": "v",
          "parent_id_field": "name",
          "filter_param": "secret"
        }
      ]
    },
    "secret-versions": {
      "display_name": "Secret Versions",
      "service": "secretmanager",
      "api": {
        "base": "https://secretmanager.googleapis.com/v1",
        "path": "{secret}/versions",
        "method": "GET"
      },
      "response_path": "versions",
      "id_field": "name",
      "name_field": "name",
      "columns": [
        { "header": "Name", "json_path": "name", "width": 55 },
        { "header": "State", "json_path": "state", "width": 12 },
        { "header": "Created", "json_path": "createTime", "width": 22 }
      ],
      "actions": [
        {
          "display_name": "Destroy",
          "api": {
            "method": "POST",
            "path": "{name}:destroy"
          },
          "shortcut": "ctrl+d",
          "confirm": {
            "message": "Destroy secret version? This cannot be undone!",
            "destructive": true
          }
        },
        {
          "display_name": "Disable",
          "api": {
            "method": "POST",
            "path": "{name}:disable"
          },
          "shortcut": "x"
        },
        {
          "display_name": "Enable",
          "api": {
            "method": "POST",
            "path": "{name}:enable"
          },
          "shortcut": "e"
        }
      ]
    }
  }
}
